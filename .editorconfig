root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_size = 4

[*.ts]
indent_size = 2

[*.html]
indent_size = 2
max_line_length = 140

[*.css]
indent_size = 2

[*.scss]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.json]
indent_size = 2